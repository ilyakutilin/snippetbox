{{ define "title" }}Your Account{{ end }}

{{ define "main" }}
    <h2>Your Account</h2>
    {{ with .User }}
        <div class="snippet">
            <div class="metadata">
                <strong>Name</strong>
                <span>{{ .Name }}</span>
            </div>
            <div class="metadata">
                <strong>Email</strong>
                <span>{{ .Email }}</span>
            </div>
            <div class="metadata">
                <strong>Joined</strong>
                <span>{{ humanDate .Created }}</span>
            </div>
        </div>
    {{ end }}
{{ end }}
